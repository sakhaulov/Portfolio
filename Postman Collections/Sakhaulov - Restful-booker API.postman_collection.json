			"name": "CreateBooking",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();\r",
							"pm.collectionVariables.set(\"bookingid\", jsonData.bookingid);\r",
							"\r",
							"pm.test(\"Status code is 200\", () => {\r",
							"  pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"const responseJson = pm.response.json();\r",
							"\r",
							"//Проверка структуры ответа\r",
							"pm.test(\"booking & bookingid exist in response\", () => {\r",
							"  pm.expect(responseJson.bookingid);\r",
							"  pm.expect(responseJson.booking);\r",
							"});\r",
							"\r",
							"//Проверка соответствия данных запроса и ответа\r",
							"pm.test(\"firstname is 'Tim'\", () => {\r",
							"  pm.expect(responseJson.booking.firstname).to.eql(\"Tim\");\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
